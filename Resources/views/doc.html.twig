<html>
<head>
    <title>RPC Docs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        body {
            background-color: #fff2b3;
        }
        #menu {
            background-color: #ffc107;
            height: 100%;
            padding: 0;
        }
        .navbar-brand {
            text-align: center;
            width: 100%;
            font-size: 1rem;
        }
        .service__title {
            font-size: 2rem;
        }
        .method {
            background-color: #e9ecef;
        }
        .method__title {
            font-size: 1rem;
            font-weight: bold;
            color: black;
        }
    </style>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-1 position-fixed flex-column" id="menu">
            <div class="nav nav-tabs nav-fill" id="tabs" role="tablist" aria-orientation="vertical">
                <dpan class="navbar-brand">RPC</dpan>
                {% for key, rpcService in rpcServices %}
                    <a class="nav-link active" id="{{ key }}-tab" data-toggle="tab" href="#{{ key }}" role="tab" aria-controls="{{ key }}" aria-selected="true">{{ key }}</a>
                {% endfor %}
            </div>
        </div>
        <div class="col offset-1 tab-content" id="content">
            {%- for key, rpcService in rpcServices %}
                <div class="tab-pane active service container-fluid" id="{{ key }}" role="tabpanel" aria-labelledby="{{ key }}-tab">
                    <div class="col">
                        <div class="row service__title">{{ key }}</div>
                        {% for method in rpcService.getMethods()|filter(method => method.isPublic() and method.name != 'getServiceKey') %}
                            <div class="row card method mb-2">
                                <div class="card-body" id="{{ key~'.'~method.name }}">
                                    {% if  method.getDocComment is not empty %}
                                        <div class="method__comment">
                                            {{ method.getDocComment|nl2br }}
                                        </div>
                                    {% endif %}
                                    <div class="method__title">
                                        {{ method.name }}(
                                        {%- for param in method.getParameters() %}
                                            {{ param.getName() }}{%- if param.hasType() %}: {{ param.getType() }}{% endif %}
                                            {%- if param.isDefaultValueAvailable() %}
                                                = {{ param.getDefaultValue() }}
                                            {% endif %}
                                            {%- if not loop.last %}, {% endif %}
                                        {% endfor -%}
                                        ){{ method.getReturnType() ? ': ' ~ method.getReturnType : '' }}
                                    </div>
                                    <div class="method__example">
                                        <a class="link" data-bs-toggle="collapse" href="#example-{{ key }}-{{ method.name }}" role="button" aria-expanded="false" aria-controls="example-{{ key }}-{{ method.name }}">
                                            example
                                        </a>
                                        <pre class="collapse mt-2 mb-0" id="example-{{ key }}-{{ method.name }}">
{
    "jsonrpc": "2.0",
    "id": "myid",
    "method": "{{ key }}.{{ method.name }}",
    "data": { {% for param in method.getParameters() %}{{ param.getName() }}: {{ param.getType() }}{% if not loop.last %}, {% endif %}{% endfor %} }
}</pre>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
